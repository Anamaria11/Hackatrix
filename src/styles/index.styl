*/
.resume
    &__list
        display: flex
        flex-wrap: wrap
        padding-left: 20px
        margin-bottom: 20px

    &__item
        flex-basis: 50%
        margin-bottom: 20px

        &::marker
            color: green-light

    &__title
        font-size: 2rem
        margin-bottom: 12px

    &__sub
        margin-bottom: 30px

    &__qty
        padding-left: 1rem
        color: white

    &__type
        font-size: 1.1rem
        font-weight: bold
        text-align: left
        text-transform: capitalize

/*
*
 *
  *
    USER
  *
 *
*
*/
.user
    &__loader
        color: white
        font-size: 2rem
        margin-top: 4rem

    &__btn
        margin-bottom: 20px

    &__fig
        margin: auto
        margin-bottom: 20px
        width: 100px
        height: 100px
        border-radius: 50%
        overflow: hidden
        border: 3px solid white

    &__img
        background: green
        width: 100%
        object-fit: cover

    &__main
        margin-bottom: 40px

    &__title
        display: block
        margin-bottom: 20px
