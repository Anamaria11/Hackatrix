@import "../../src/styles/_common.styl"

*
    box-sizing: border-box
    font-family: "Courier New", Courier, monospace
    line-height: 1
    margin: 0
    padding: 0
    transition: 0.3s all ease

    &:hover
        transition: 0.3s all ease

    &:focus
    &::-moz-focus-outer
        border: 0
        outline: none

body
    min-height: 100vh
    max-width: 100vw
    overflow: hidden
    display: flex
    justify-content: center
    align-items: center

button
    background: green
    border-radius: 20px
    width: calc(100% - 20px)
    padding: 12px
    border: 0
    color: white

    &:hover
        background: darken(green, 20)

.app
    position: relative
    background: red
    border-radius: 20px

    &__content
        height: 590px
        width: 274px
        z-index: 2
        border-radius: 20px
        padding: 20px
        position: relative
        padding-top: 40px
        overflow: hidden

    &__img
        position: absolute
        top: -20px
        left: -20px
        width: 480px
        top: -40px
        left: -149px
        z-index: 1
