@import "../../src/styles/_common.styl"

*
    box-sizing: border-box
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif
    line-height: 1
    margin: 0
    padding: 0
    transition: 0.3s all ease

    &:hover
        transition: 0.3s all ease

    &:focus
    &::-moz-focus-outer
        border: 0
        outline: none

img
video
figure
    object-fit: contain
    max-width: 100%

body
    min-height: 100vh
    max-width: 100vw
    overflow: hidden
    display: flex
    justify-content: center
    align-items: center

p
small
    text-align: center
    color: white

button
    background: green
    border-radius: 20px
    width: 100%
    padding: 12px
    border: 0
    color: white

    &[disabled]
        background: desaturate(green, 40)

    &:not([disabled])
        &:hover
            cursor: pointer
            background: darken(green, 20)

input:not([type=button])
    padding: 12px
    border: 0
    border-radius: 20px
    width: 100%
    margin-bottom: 5px

h1
h2
h3
    color: white
    text-align: center
    font-size: 1rem

.app
    position: relative
    background-image: linear-gradient(to bottom, rgba(28, 204, 136, 0.69), rgba(15, 98, 69, 0.85) 77%, rgba(14, 90, 64, 0.86))
    border-radius: 20px

    &__content
        height: 590px
        width: 274px
        z-index: 2
        border-radius: 20px
        padding: 20px
        position: relative
        padding-top: 40px
        overflow: hidden

    &__img
        position: absolute
        top: -20px
        left: -20px
        width: 480px
        top: -40px
        left: -149px
        z-index: 1
        max-width: @width

/*
*
 *
  *
    SCAN
  *
 *
*
*/
.scan
    &__title
        margin-top: 0.4rem

    &__cam
        background: black
        position: absolute
        top: 50%
        left: 10%
        transform: translateY(-50%) scaleX(-1)
        width: 80%
        height: 200px
        width: 200px
        object-fit: cover

    &__btn
        position: absolute
        bottom: 20px
        width: 80%
        left: 10%

    &__sub
        position: absolute
        bottom: 15%
        width: 90%
        left: 5%

    &__bg
        background: white
        width: 100%
        position: absolute
        left: 5px
        height: 380px
        top: 80px
        width: calc(100% - 8px)

    &__border
        position: absolute
        width: 180px
        top: 103px
        left: 38px

/*
*
 *
  *
    TRASH
  *
 *
*
*/
.trash
    &__btn
        position: absolute
        bottom: 20px
        left: 5%
        width: 90%
        z-index: 2

    &__qty
        bottom: 80px
        color: white
        text-align: center
        position: absolute
        width: 90%
        left: 5%
        font-size: 2rem

    &__bar
        padding-top: 80px
        position: absolute
        bottom: 6px
        left: 6px
        overflow: hidden
        border-radius: 23px
        background: green-light
        min-height: 200px
        border-radius: 29px
        width: 267px
        clip-path: circle(70.7% at 50% 100%)
        max-height: 1000px

/*
*
